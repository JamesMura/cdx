var PatientCard = React.createClass({
  getDefaultProps: function() {
    return {
      canEdit: false,
      canAddTest: true
    }
  },

  render: function () {
    var patient = this.props.patient;

    function patientInfo(patient)
    {
      var string = "";
      if (patient.gender) {
        string += patient.gender;
        if (patient.birth_date_on) {
          string += " - "
        }
      }
      if (patient.birth_date_on) {
        string += patient.birth_date_on
        if( patient.age > 0)
          string += " (" + patient.age + " y/o)";
        else // months only
          string += " (" + patient.age_months + " m/o)";
      }
      return string;
    }

    if (patient == null)
    {
      return (
        <%= to_jsx(card(image: asset_url('card-unkown.png')) do |c|
          c.top do
            "No patient information"
          end
        end) %>
      );
    }
    else
    {
      return (
        <%= to_jsx(card(image: asset_url('card-unkown.png')) do |c|
          c.top do
            raw <<-JSX
              <ul class="column1">
                <li>
                  <label>Name</label>
                  {patient.name || "(Unknown name)"}
                </li>
                <li>
                  <label>Gender</label>
                  {patient.gender}
                </li>
                <li>
                  <label>Date of Birth</label>
                  {patientInfo(patient)}
                </li>
              </ul>
              <ul class="column2">
                <li>
                  <label>Address</label>
                  {patient.address}<br/>
                </li>
                <li>
                  <label>Phone</label>
                  {patient.phone}<br/>
                </li>
                <li>
                  <label>Email</label>
                  {(function(){
                    if (patient.email) {
                      return <a href={"mailto:" + patient.email}>{patient.email}</a>;
                    }
                  }.bind(this))()}
                </li>
              </ul>
            JSX
          end

          c.actions do
            raw <<-JSX
            {(function(){
              if (!this.props.canEdit) return;

              return (
                <a href={"/patients/" + patient.id + "/edit"} title="Edit">
                  <img src="#{asset_url("ic-pencil.png")}"/>
                </a>);
            }.bind(this))()}

            {(function(){
              if (!this.props.canAddTest) return;
              if (this.props.showTestLink != true) return;
              return (
                <a href={"/encounters/new?mode=fresh_tests&patient_id=" + patient.id } title="Create Test Order" className="label">
                  Create Test Order
                </a>);
            }.bind(this))()}
            JSX
          end
        end) %>
      );
    }
  }
});

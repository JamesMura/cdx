= form_for(@work_group) do |f|
  - if @work_group.errors.any?
    #error_explanation
      %h2
        = pluralize(@work_group.errors.count, "error")
        prohibited this work_group from being saved:
      %ul
        - @work_group.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .actions
    = f.submit

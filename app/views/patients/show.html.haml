- content_for(:subheader) do
  .row.center.edit
    .col.pe-10
      .row
        .col
          %h2
            = link_to patients_path, class: 'side-link', title: 'Back' do
              = image_tag "arrow-left.png"
            = @patient.name
.testflow
  .container
    = render partial: 'patient_summary', locals: { patient: @patient }

    - if @encounters.empty?
      = empty_data icon: 'icon-outline-test xx-large' do |c|
        - c.body do
          %h1 No medical history
          %p Create test orders in order to start the medical history
    - else
      = render partial: 'patient_medical_history', locals: { encounters: @encounters }

    .row
      .col
        = link_to 'Add Comment', new_patient_comment_path(@patient), class: 'btn', title: 'Add new comment'

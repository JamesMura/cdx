%h1
  = link_to settings_path, class: 'side-link', title: 'Back' do
    = image_tag "arrow-left.png"
.row
  .col
    = link_to "+", new_institution_path, class: 'btn-add side-link fix', title: 'Add Institution'

    = cdx_table title: 'Institutions' do |t|
      - t.thead do
        %tr
          %th Name
      - t.tbody do
        - @institutions.each do |institution|
          %tr
            %td= link_to institution.name, edit_institution_path(institution)

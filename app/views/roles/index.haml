= render "filters"

.row
  .col
    = cdx_table title: pluralize(@total, "role") do |t|
      - t.columns do
        %col{:width => "45%"}
        %col{:width => "45%"}
        %col{:width => "10%"}
      - t.thead do
        %tr
          %th
            %div.tooltip 
              Name
              %div.tooltiptext_r 
                This is the Name of the Role.
          %th
            %div.tooltip 
              Location
              %div.tooltiptext_r 
                This is the Site the Role applies to.
          %th
            %div.tooltip 
              Users
              %div.tooltiptext_b 
                Number of Users who have this Role.

      - t.tbody do
        - @roles.each do |role|
          %tr{data: {href: edit_role_path(role)}}
            %td= role.name
            %td= role.site ? role.site.name : role.institution.name
            %td= @user_counts[role.id]

    .pagination
      = render 'shared/pagination'

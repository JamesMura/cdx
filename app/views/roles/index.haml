.row
  .col
    - if @can_create
      = link_to "+", new_role_path, class: 'btn-add side-link ontop fix', title: 'Add Role'
    = cdx_table title: 'Roles' do |t|
      - t.columns do
        %col{:width => "100%"}
      - t.thead do
        %tr
          %th Name
      - t.tbody do
        - @roles.each do |role|
          %tr
            %td= link_to role.name, edit_role_path(role)

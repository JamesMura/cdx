- content_for :html_title do
  Connected Diagnostics Platform

- content_for :app_name do
  cdp

- content_for :app_logo do
  = image_tag "cdp_platform.png"

- content_for :app_version do
  = Cdp::Application.config.version_name

- top_nav_bar do
  - top_nav_bar_item 'Home', root_path
  - if current_user
    - top_nav_bar_item 'Dashboard', nndd_path, (params[:controller] == 'dashboards')
    - top_nav_bar_item 'Institutions', institutions_path, !@institution_tab.nil?
    - top_nav_bar_item 'Locations', locations_path, @in_locations
    - top_nav_bar_item 'Manifests', manifests_path, (params[:controller] == "manifests")
    - top_nav_bar_item 'Events', events_path, (params[:controller] == "events")
    - top_nav_bar_item 'Filters', filters_path, (params[:controller] == "filters")
    - top_nav_bar_item 'Subscribers', subscribers_path, (params[:controller] == "subscribers")
    - top_nav_bar_item 'Policies', policies_path, (params[:controller] == "policies")
  - top_nav_bar_item 'Tour', '#'
  - top_nav_bar_item 'Community', '#'
  - top_nav_bar_item 'Help', '#'

= render template: 'instedd/application'

.row-fluid
  .span12.well-white
    %form.form-inline
      %label Laboratory:
      %select(name="laboratory")
        %option(value="") (all)
        = options_from_collection_for_select @combo_laboratories, :id, :name, params["laboratory"]
      %label Condition:
      %input{type: "text", name: "condition", value: params["condition"]}
      %input.btn.btn-small{type: "submit", value: "Filter"}

      - if params["condition"].present?
        - query = {laboratory: params["laboratory"], condition: params["condition"]}
        = link_to "Save this filter", new_filter_path(query: query)

.row-fluid
  .span12
    %table.table
      %tr
        %th Created at
        %th Institution
        %th Laboratory
        %th Device
        %th Assay name
        %th Results
      - @tests.each do |test|
        %tr
          %td= test["created_at"]
          %td= @institutions[test["institution_id"]]
          %td= @laboratories[test["laboratory_id"]]
          %td= @devices[test["device_uuid"]]
          %td= test["assay_name"]
          %td= (test["results"] || []).map { |r| "#{r["condition"]}: #{r["result"]}" }.join ", "

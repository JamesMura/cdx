.testflow
  .container
    .row.labelHeader
      .row.col-6
        %h3 New Episode (TB)
      .row.col-6
        %ul
          %li
            = link_to 'Save', '#', class: 'button save', title: 'Save'
          %li
            = link_to 'Cancel', '#', class: 'button cancel', title: 'Cancel'

    = form_for(@patient_episode, html: { class: 'zebra' }, url: '/' ) do |f|
      .row
        .col-6
          = f.label 'Diagnosis'
        .col-6
          = f.collection_select :diagnosis, Episode.diagnosis_options, :id, :name, include_blank: true
      .row
        .col-6
          = f.label 'HIV Status'
        .col-6
      .row
        .col-6
          = f.label 'Drug Resistance'
        .col-6
          = f.collection_select :drug_resistance, Episode.drug_resistance_options, :id, :name, include_blank: true
      .row
        .col-6
          = f.label 'Treatment Outcome'
        .col-6
          = f.collection_select :outcome, Episode.treatment_outcome_options, :id, :name, include_blank: true

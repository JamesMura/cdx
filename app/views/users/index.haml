- content_for(:subheader) do
  .row.center.filters
    .col.pe-10
      .row
        .col
          = react_component "AddUserLink", roles: @roles
          %h1
            Users
      %form#filters-form{action: users_path, "data-auto-submit" => true}
        %input{type: "hidden", name: "page_size", value: @page_size}
        .row
          .filter
            %label.block Name
            %input{type: "text", name: "name", value: params["name"]}
          .filter
            %label.block Role
            = cdx_select name: "role", value: params["role"] do |select|
              - select.item "", "Show all"
              - select.items @roles, :id, :name
          .filter
            %label.block Last activity
            = cdx_select name: "last_activity", value: params["last_activity"] do |select|
              - select.item "", "Show all"
              - select.items @date_options, :value, :label

.row
  .col
    = cdx_table title: pluralize(@users.count, "user") do |t|
      - t.columns do
        %col{:width => "30%"}
        %col{:width => "30%"}
        %col{:width => "30%"}
      - t.actions do
        = link_to "download CSV", users_path(format: :csv)

      - t.thead do
        %tr
          %th Full name
          %th Roles
          %th Last Activity
      - t.tbody do
        - @users.each do |user|
          %tr{class: (user.invited_pending? ? "pending" : ""), data: {href: edit_user_path(user.id)}}
            %td= user.full_name
            %td= user.roles.map(&:name).join(", ")
            %td= last_activity(user)

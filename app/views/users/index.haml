- content_for(:subheader) do
  .row.center.filters
    .col.pe-10
      .row
        .col
          = react_component "AddUserLink", roles: @roles
          %h1
            Users
      %form#filters-form{action: users_path, "data-auto-submit" => true}
        %input{type: "hidden", name: "page_size", value: @page_size}
        .row
          .filter
            %label.block Name
            %input{type: "text", name: "name", value: params["name"]}
          .filter
            %label.block Role
            = react_component('CdxSelect', items: @roles, value: params["role"], name: 'role')
          .filter
            %label.block Last activity
            = cdx_select name: "last_activity", value: params["last_activity"] do |select|
              - select.item "", "Show all"
              - select.items @date_options, :value, :label

.row
  .col
    - if @users.empty?
      = empty_data icon: 'ic140-users' do |c|
        - c.body do
          %h1 There are no users with access to this location
          %p Invite other users to join this team
    - else
      = cdx_table title: pluralize(@users.count, "user") do |t|
        - t.columns do
          %col{:width => "30%"}
          %col{:width => "30%"}
          %col{:width => "30%"}
        - t.actions do
          = link_to users_path(format: :csv), title: 'Download CSV' do
            .icon-download.icon-gray

        - t.thead do
          %tr
            %th Full name
            %th Roles
            %th Last Activity
        - t.tbody do
          - @users.each do |user|
            %tr{class: (user.invited_pending? ? "pending" : ""), data: {href: edit_user_path(user.id)}}
              %td= user.full_name
              %td= user.roles.map(&:name).join(", ")
              %td= last_activity(user)

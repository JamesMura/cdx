= render 'device_card'
= render 'tabs'

.row
  .col
    %h4 Setup
    %p
      %a View instructions
      on how to setup this device or
      %a email setup instructions to a lab operator
      \.

    %p
      The Device Id and Secure Key allow your device to identify itself with CDx.

.row
  .col.pe-2 Device Id
  .col
    .uuid= @device.uuid
    %p= barcode @device.uuid

.row
  .col.pe-2 Secret Key
  #secret-key.col
    = render 'secret_key'

.row
  .col.pe-2 Activation token
  #activation-token.col
    = render 'activation_token'


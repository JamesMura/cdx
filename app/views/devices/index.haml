= render "filters"

.row.paginationHeader
  .col
    - if @devices.empty?
      = empty_data icon: 'icon-outline-device xx-large' do |c|
        - c.body do
          %h1
            = I18n.t('devices.index.no_devices', entity_name: truncated_navigation_context_entity_name)
          %p
            = I18n.t('devices.index.configuration_steps')
    - else
      = react_component "DevicesIndexTable", devices: Presenters::Devices.index_table(@devices), title: I18n.t('devices.index.device', count: @total),
          orderBy: params["order_by"] || "devices.name",
          downloadCsvPath: devices_path(filters_params.merge(format: :csv).merge(display_as: I18n.t('devices.index.download_csv')))
      .pagination
        = render 'shared/pagination'

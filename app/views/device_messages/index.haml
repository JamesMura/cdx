= render "filters"

.row
  .col
    - if @messages.empty?
      = empty_data icon: 'icon-outline-instructions xx-large' do |c|
        - c.body do
          %h1
            = I18n.t('device_messages.index.no_logs')
          %p
            = I18n.t('device_messages.index.connect_device')
    - else
      .row.paginationHeader
        .col
          = react_component "DeviceMessagesList", deviceMessages: @device_messages, title: I18n.t('test_orders.index.test_order', count: @total), orderBy: @order_by
          .pagination
            = render 'shared/pagination'

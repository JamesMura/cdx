#show-microscopy-result.testflow
  .container
    .row.labelHeader
      .col-6
        %h3
          = I18n.t('microscopy_results.show.header', patient_name: patient_display_name(@requested_test.encounter.patient.name))
      .col-6
        %ul
          %li
            = link_to I18n.t('views.back'), encounter_path(@requested_test.encounter, :test_order_page_mode => @return_page_mode), class: 'button new'
    .order-details
      .panel
        .row
          .col-6
            .row
              .col-12
                %label
                  = MicroscopyResult.human_attribute_name(:sample_collected_on)
                = I18n.l(@microscopy_result.sample_collected_on, format: :full_date)
            .row
              .col-12
                %label
                  = MicroscopyResult.human_attribute_name(:specimen_type)
                = @microscopy_result.specimen_type
            .row
              .col-12
                %label
                  = MicroscopyResult.human_attribute_name(:serial_number)
                = @microscopy_result.serial_number
            .row
              .col-12
                %label
                  = MicroscopyResult.human_attribute_name(:appearance)
                = Extras::Select.find(MicroscopyResult.visual_appearance_options, @microscopy_result.appearance)
            .row
              .col-12
                %label
                  = MicroscopyResult.human_attribute_name(:examined_by)
                = @microscopy_result.examined_by
            .row
              .col-12
                %label
                  = MicroscopyResult.human_attribute_name(:result_on)
                = I18n.l(@microscopy_result.result_on, format: :full_date)
          .col-6
            .row
              .col-12
                = render partial: 'shared/display_boolean_value', locals: { label_name: MicroscopyResult.human_attribute_name(:results_negative), field_name: 'microscopy_result_results_negative', field_value: @microscopy_result.results_negative }
              .col-12
                = render partial: 'shared/display_boolean_value', locals: { label_name: MicroscopyResult.human_attribute_name(:results_1to9), field_name: 'microscopy_result_results_1to9', field_value: @microscopy_result.results_1to9 }
              .col-12
                = render partial: 'shared/display_boolean_value', locals: { label_name: MicroscopyResult.human_attribute_name(:results_1plus), field_name: 'microscopy_result_results_1plus', field_value: @microscopy_result.results_1plus }
              .col-12
                = render partial: 'shared/display_boolean_value', locals: { label_name: MicroscopyResult.human_attribute_name(:results_2plus), field_name: 'microscopy_result_results_2plus', field_value: @microscopy_result.results_2plus }
              .col-12
                = render partial: 'shared/display_boolean_value', locals: { label_name: MicroscopyResult.human_attribute_name(:results_3plus), field_name: 'microscopy_result_results_3plus', field_value: @microscopy_result.results_3plus }

.testflow
  .container
    / Commented Out Spans are for use within CDX using your icon set, where applicable at least
    .row.labelHeader
      .col-6
        %h3 Comment
      .col-6
        %ul
          %li
            = link_to "Back", patient_path(comment.patient), class: 'button new'
    .order-details
      .panel
        / Start of Row
        .row
          .col-11
            .row
              .col-12
                %label Date:
                = comment.commented_on.strftime(I18n.t('date.input_format.pattern'))
            .row
              .col-12
                %label User:
                = comment.user.full_name
            .row
              .col-12
                %label Description
                = comment.description
            .row
              .col-12
                %label Comment:
                = comment.comment

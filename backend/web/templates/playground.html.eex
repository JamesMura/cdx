<!DOCTYPE HTML>
<html>
<head>
  <title>CDC - Playground</title>
  <link rel="shortcut icon" href="/static/favicon.ico" />
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" />
  <script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
  <style>
  body { margin: 20px; }
  </style>
  <script>
  $(function() {
    $report_form = $("#report_form");
    $create_button = $("#create_button");
    $report_form.submit(function() {
      $create_button.prop("disabled", true);
      $create_button.val("Creating...");
      device = $("#device").val();
      data = {
        age: $("#age").val(),
        gender: $("#gender").val(),
        assay_code: $("#assay_code").val(),
        result: $("#result").val()
      }

      $.ajax({
        url: "/devices/" + device,
        type: "POST",
        data: JSON.stringify(data),
        contentType: "application/json; charset=utf-8",
        success: function(data, textStatus, jqXHR) {
          $create_button.prop("disabled", false);
          $create_button.val("Created!");
          setTimeout(function() { $create_button.val("Create another report"); }, 1000);
        },
        error: function(jqXHR, textStatus, errorThrown) {
          $create_button.prop("disabled", false);
          $create_button.val("Error: " + errorThrown);
          setTimeout(function() { $create_button.val("Create another report"); }, 1000);
        }
      });
      return false;
    });

    $query_form = $("#query_form");
    $query_button = $("#query_button");
    $query_form.submit(function() {
      query_string = $("#query_string").val();
      $query_button.prop("disabled", true);
      $query_button.val("Querying...");

      $.ajax({
        url: "/api/events?" + query_string,
        type: "GET",
        success: function(data, textStatus, jqXHR) {
          $query_button.prop("disabled", false);
          $query_button.val("Query");
          data = JSON.parse(data);
          data = JSON.stringify(data, null, 4);
          $('#response_div').show();
          $('#response').text(data);
        },
        error: function(jqXHR, textStatus, errorThrown) {
          $query_button.prop("disabled", false);
          $query_button.val("Error: " + errorThrown);
          setTimeout(function() { $query_button.val("Query"); }, 1000);
        }
      });

      return false;
    });

  });
  </script>
</head>
<body>
  <h3>CDC - Playground</h3>
  <div class='row-fluid'>
    <div class='span3'>
      <h4>Create Report</h4>
      <form id="report_form" method="post">
        <div>
          <label for="device">Device</label>
          <select id="device" name="device">
            <%= Enum.map @devices, fn(device) -> %>
              <option value="<%= device.secret_key %>"><%= device.name %></option>
            <% end %>
          </select>
        </div>
        <div>
          <label for="age">Age</label>
          <input id="age" name="age" type="number" value="20" />
        </div>
        <div>
          <label for="gender">Gender</label>
          <select id="gender" name="gender">
            <option value="male">Male</option>
            <option value="female">Female</option>
          </select>
        </div>
        <div>
          <label for="assay_code">Assay code</label>
          <input id="assay_code" name="assay_code" type="text" value="GX4001" />
        </div>
        <div>
          <label for="result">Result</label>
          <input id="result" name="result" type="text" value="positive" />
        </div>
        <div>
          <input id="create_button" class="btn" name="commit" type="submit" value="Create report" />
        </div>
      </form>
    </div>
    <div class='span9'>
      <h4>Query Reports</h4>

      <form id="query_form" method="post">
        <div>
          <label for="query_string">Query string</label>
          <textarea id="query_string" name="query_string" style="width:400px;height:50px">age=20</textarea>
        </div>
        <div>
          <input id="query_button" class="btn" name="commit" type="submit" value="Query" />
        </div>
      </form>

      <div id="response_div" style="display:none">
        <hr/>
        <h5>Response:</h5>
        <pre id="response" style="height:300px;overflow:auto"></pre>
      </div>
    </div>
  </div>
</body>
</html>
